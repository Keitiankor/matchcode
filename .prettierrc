{
  "useTabs": false,
  "tabWidth": 4,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "htmlWhitespaceSensitivity": "css",
        "embeddedLanguageFormatting": "auto"
      }
    },
    {
      "files": ".html",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    },
    {
      "files": ".json",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    },
    {
      "files": [
        ".prettierrc",
        "*.yml"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
